        <item name="themeDividerColor">@color/color2D3950</item>
        <item name="themeLinkColor">@color/color828FAE</item>
        <item name="themeMidWhiteBackgroundColor">@color/color212731</item>
        <item name="themeTextColor1">@color/color828FAE</item>
        <item name="themeTextColor2">@color/color6A707E</item>
        <item name="themeTextColor3">@color/color6A707E</item>
